<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>


<VBox alignment="TOP_CENTER" spacing="10" styleClass="root"
            xmlns="http://javafx.com/javafx/8.0.171"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.todolist.TodoListController">
            <TextField fx:id="inputField" promptText="Tambakan tugas..." />
            <ListView fx:id="listView" />

            <!-- Tombol mode gelap -->
            <ToggleButton fx:id="themeToggle" text="Mode Gelap" onAction="#handleToggleTheme" />
            <HBox alignment="CENTER" spacing="10">
                <Button text="Tambah" onAction="#handleAdd" styleClass="btn" />
                <Button text="Hapus" onAction="#handleDelete" styleClass="btn-delete" />
                <Button text="Update" onAction="#handleUpdate" styleClass="btn-update" />
            </HBox>
</VBox>